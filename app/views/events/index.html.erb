<div class="container">
  <div class="jumbotron">
    <div class="container">
      <h1 class="display-3" color="white">EVENTOP</h1>
      <h3>Créer les plus beaux events</h3>
      <br/><br/>
    </div>
  </div>

  <div class="row">
    <% @events.each_with_index do |event, i| %>
      <div class="card-deck mx-auto text-center">
        <div class="card mb-4 shadow-sm">
          <div class="card-header">
            <h4 class="my-0 font-weight-normal">Evenement <%= event.id %></h4>
          </div>
          <div class="card-body">
            <ul class="list-unstyled mt-3 mb-4">
              <li>Titre: <%= event.title %></li>
              <li>Description: <%= event.description %></li>
            </ul>
          <%= link_to "Découvre l'evenement", event_path(event.id), class: "btn btn-lg btn-block btn-outline-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
